<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_back">
    <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/back_white"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:visibility="gone"
            />
<ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/logo_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.2"
        android:scaleType="centerInside"
        />
    <LinearLayout
            android:id="@+id/loginLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_standard"
            android:orientation="vertical">

        <com.hast.norvialle.gui.utils.InputView
                android:id="@+id/signLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="email"
                app:hint="@string/login"
                />
  <com.hast.norvialle.gui.utils.InputView
                android:id="@+id/signPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="password"
                app:hint="@string/password"
                />



        <TextView
                android:id="@+id/signIn"
                android:text="@string/sign_in"
                style="@style/authButton" />

        <TextView
                android:id="@+id/registration"
                android:text="@string/registration"
                style="@style/authButton" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/registerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/margin_standard"
            android:visibility="gone"
            android:orientation="vertical">


        <com.hast.norvialle.gui.utils.InputView
                android:id="@+id/regLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="email"
                app:hint="@string/login"
                />

        <com.hast.norvialle.gui.utils.InputView
                android:id="@+id/regPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="password"
                app:hint="@string/password"
                />
        <com.hast.norvialle.gui.utils.InputView
                android:id="@+id/regConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="password"
                app:hint="@string/confirm_password"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal"
                android:weightSum="3">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <CheckBox
                        android:id="@+id/checkPhotograph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:checked="true" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/photograph"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_big_ish" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <CheckBox
                        android:id="@+id/checkMakeupArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/makeup_artist"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_big_ish" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <CheckBox
                        android:id="@+id/checkAssistant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/assistant"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_big_ish" />
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/registerButton"
                android:text="@string/register"
                style="@style/authButton" />
    </LinearLayout>
    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/forgotPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/margin_standard"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
        <CheckBox
                android:id="@+id/remember"
                android:buttonTint="@color/colorPrimaryDark"
                style="@style/authButton"
                android:text="@string/remember"
                android:checked="true"
                />
        <CheckBox
                android:id="@+id/fingerprint"
                android:buttonTint="@color/colorPrimaryDark"
                style="@style/authButton"
                android:text="@string/fingerprint"
                android:visibility="gone"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/forgotPassword"
            android:text="@string/restore_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/margin_standard"
            style="@style/authButton" />
</androidx.constraintlayout.widget.ConstraintLayout>