<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.hast.norvialle.domain.AddDressViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/dressPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dress_wide"
            app:image="@{viewModel.prepareLoading(viewModel.dressLiveData.fileName)}"
            app:loadingCallback="@{viewModel.loadingCallback}"
            app:cache="@{false}"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            app:mutableVisibility="@{viewModel.getLoadingVisibility()}"
        >
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
        />
    </RelativeLayout>


    <ImageView
            android:id="@+id/plusIcon"
            android:layout_width="@dimen/icon_size_big"
            android:layout_height="@dimen/icon_size_big"
            android:src="@drawable/pink_plus"
            app:layout_constraintBottom_toBottomOf="@id/dressPhoto"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_margin="30dp"
            app:layout_constraintLeft_toLeftOf="@id/dressPhoto"
            android:padding="5dp"
            app:layout_constraintRight_toRightOf="parent" />

    <com.hast.norvialle.presenataion.utils.InputView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            app:hint="@string/comment"
            app:expectedInputType="text"
            app:text="@{viewModel.dressLiveData.comment}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dressPhoto"
            />


    <com.hast.norvialle.presenataion.utils.InputView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            app:hint="@string/price"
            app:expectedInputType="price"
            app:text="@{viewModel.putValueOrNothing(viewModel.dressLiveData.price)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comment" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>