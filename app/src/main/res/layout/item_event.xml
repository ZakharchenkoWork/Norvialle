<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="92dp"

            >

        <ImageView
                android:id="@+id/arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/margin_standard"
                />
        <ImageView
                android:id="@+id/insta"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/insta"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/margin_standard"
                />
        <ImageView
                android:id="@+id/delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/copy"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/margin_standard"
                />
        <ImageView
                android:id="@+id/copy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/copy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/edit"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/margin_standard"
                />
        <ImageView
                android:id="@+id/edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/margin_standard"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/foregroundLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/items_back">
<LinearLayout
        android:id="@+id/orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/margin_standard"
        android:orientation="vertical"
        >
    <ImageView
            android:id="@+id/studio"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/studio"/>

    <ImageView
            android:id="@+id/dress"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/dress"/>
    <ImageView
            android:id="@+id/makeup"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/makeup"/>

</LinearLayout>


    <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:text="Локация"
            android:textSize="@dimen/text_big_ish"
            app:layout_constraintLeft_toRightOf="@id/orders"
            app:layout_constraintRight_toLeftOf="@id/time"
            app:layout_constraintStart_toEndOf="@+id/orders"
            app:layout_constraintTop_toTopOf="@id/orders" />

    <TextView
            android:id="@+id/locationRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/margin_standard"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_normal"
            android:text="Зал"
            app:layout_constraintLeft_toRightOf="@id/orders"
            app:layout_constraintRight_toLeftOf="@id/time"
            app:layout_constraintStart_toEndOf="@+id/orders"
            app:layout_constraintTop_toBottomOf="@id/locationName" />

    <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_standard"
            android:text="16:30"
            app:layout_constraintEnd_toEndOf="parent"
android:textSize="@dimen/text_big"
            app:layout_constraintTop_toTopOf="@id/orders"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>