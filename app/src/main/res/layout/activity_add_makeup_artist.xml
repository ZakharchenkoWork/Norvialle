<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="viewModel"
                type="com.hast.norvialle.domain.AddMakeupArtistViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/standard_layout_background">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.hast.norvialle.presenataion.utils.InputView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/contactsList"
                android:layout_marginRight="@dimen/margin_standard"
                app:expectedInputType="name"
                app:text="@{viewModel.makeupArtistLiveData.name}"
                app:hint="@string/name_makeup_artist" />
    <ImageView
            android:id="@+id/contactsList"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/name"
            android:layout_alignTop="@id/name"
            android:src="@drawable/contacts"
            />
</RelativeLayout>

        <com.hast.norvialle.presenataion.utils.InputView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="@string/phone"
                app:text="@{viewModel.makeupArtistLiveData.phone}"
                app:expectedInputType="phone"
                />

        <com.hast.norvialle.presenataion.utils.InputView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expectedInputType="price"
                app:text="@{viewModel.putValueOrNothing(viewModel.makeupArtistLiveData.defaultPrice)}"
                app:hint="@string/makeupPrice"
                />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>