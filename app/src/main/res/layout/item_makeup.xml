<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/background_plate">

    <TextView
            android:id="@+id/makeupArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="Яна"
            android:textSize="@dimen/text_big_ish"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/makeupArtistPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_small"
            android:text="+38097-333-22-48"
            android:layout_marginBottom="@dimen/margin_standard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/makeupArtistName"
            app:layout_constraintTop_toBottomOf="@+id/makeupArtistName" />
    <TextView
            android:id="@+id/makeupArtistPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_huge"
            android:text="@string/makeup_artist_price"
            app:layout_constraintRight_toRightOf="@id/edit"
            app:layout_constraintTop_toTopOf="@+id/makeupArtistPhone" />
    <ImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/edit"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/margin_standard"

            app:layout_constraintTop_toTopOf="@id/makeupArtistName"/>
    <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/delete"
            app:layout_constraintRight_toLeftOf="@id/edit"
            android:layout_marginRight="@dimen/margin_standard"
            app:layout_constraintTop_toTopOf="@id/makeupArtistName" />


</androidx.constraintlayout.widget.ConstraintLayout>